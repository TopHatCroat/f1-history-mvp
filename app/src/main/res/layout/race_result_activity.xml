<?xml version="1.0" encoding="utf-8"?>
<android.support.design.widget.CoordinatorLayout
    xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:id="@+id/coordinator_race_result"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context=".views.SeasonsActivity">

    <FrameLayout xmlns:android="http://schemas.android.com/apk/res/android"
        android:orientation="vertical"
        android:layout_width="match_parent"
        android:layout_height="match_parent">

        <RelativeLayout
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:id="@+id/content_race_result"
            android:padding="@dimen/padding">

            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:id="@+id/circut_name_race_result_activity"
                android:layout_alignParentLeft="true"
                android:layout_alignParentStart="true"
                style="@style/largeText"/>

            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:id="@+id/location_race_result_activity"
                android:layout_below="@+id/circut_name_race_result_activity"
                android:layout_alignParentLeft="true"
                android:layout_alignParentStart="true"
                style="@style/largeText"/>

            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:id="@+id/date_race_activity"
                android:layout_below="@+id/location_race_result_activity"
                android:layout_alignParentRight="true"
                android:layout_alignParentEnd="true"
                style="@style/normalText"/>

            <android.support.v7.widget.RecyclerView
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                android:id="@+id/recycler_race_result_activity"
                android:layout_below="@id/date_race_activity"
                android:padding="@dimen/padding">

            </android.support.v7.widget.RecyclerView>

        </RelativeLayout>

        <ProgressBar
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:id="@+id/progress_race_result_activity"
            android:layout_gravity="center"
            android:visibility="gone"/>

    </FrameLayout>

</android.support.design.widget.CoordinatorLayout>

