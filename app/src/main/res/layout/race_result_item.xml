<?xml version="1.0" encoding="utf-8"?>
<android.support.v7.widget.CardView
    xmlns:android="http://schemas.android.com/apk/res/android"
    android:orientation="vertical"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:layout_margin="@dimen/card_margin"
    android:padding="@dimen/padding">

    <LinearLayout
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:orientation="horizontal">

        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:id="@+id/position_race_result_item"
            android:layout_alignParentLeft="true"
            android:layout_alignParentStart="true"
            android:text="POS"
            android:textAlignment="center"
            style="@style/largeText"/>

        <View
            android:layout_width="1dp"
            android:layout_height="match_parent"
            android:background="@color/divider"/>

        <RelativeLayout
            android:layout_width="wrap_content"
            android:layout_height="wrap_content">


            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:id="@+id/driver_name_race_result_item"
                android:layout_alignParentLeft="true"
                android:layout_alignParentStart="true"
                style="@style/largeText"/>

            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:id="@+id/constructor_name_race_result_item"
                android:layout_below="@+id/driver_name_race_result_item"
                android:layout_alignParentLeft="true"
                android:layout_alignParentStart="true"
                style="@style/largeText"/>

            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:id="@+id/finishing_time_race_result_item"
                android:layout_below="@+id/constructor_name_race_result_item"
                android:layout_alignParentRight="true"
                android:layout_alignParentEnd="true"
                style="@style/normalText"/>

            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:id="@+id/fastest_time_race_result_item"
                android:layout_below="@+id/finishing_time_race_result_item"
                android:layout_alignParentRight="true"
                android:layout_alignParentEnd="true"
                style="@style/normalText"/>
        </RelativeLayout>

    </LinearLayout>
</android.support.v7.widget.CardView>